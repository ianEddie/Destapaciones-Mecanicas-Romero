---
import style from '@/animations/reveal.module.css'
import { Image } from 'astro:assets'
import aboutImage from '@/assets/destapacion-de-cañeria-2.webp'
import AboutInfo from './AboutInfo.astro'
---

<section class='sm:px-20 px-4 sm:mt-20 mt-10 flex relative'>
  <article
    class={`${style.reveal} bg-stone-300/90 border border-stone-400/10 sm:p-7 p-5 sm:gap-y-0 gap-y-7 grid sm:grid-cols-2 rounded-xl`}
  >
    <picture class='sm:order-1 order-2'>
      <Image
        loading='lazy'
        src={aboutImage}
        alt='Destapacion de cañeria'
        title='Destapaciones de cañerias'
        class='rounded-lg grayscale-[10%] aspect-auto'
      />
    </picture>
    <AboutInfo />
  </article>
  <span
    class='absolute bottom-0 pointer-events-none'
    id='servicios'
    aria-hidden='true'></span>
</section>
